@model IEnumerable<Car>

    @{
        ViewData["Title"] = "List of Cars";
    }

    <div class="row">
        <div class="col-md-8 offset-md-2">
             
            <table class="table">
                <thead>
                    <tr class="text-center">
                        <th>@Html.DisplayNameFor(model => model.CarPictureURL)</th>
                        <th>@Html.DisplayNameFor(model => model.Brand)</th>
                        <th>@Html.DisplayNameFor(model => model.Description)</th>
                        @if (User.Identity.IsAuthenticated && User.IsInRole("Admin"))
                        {
                            <th>Actions</th>
                        }
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td class="align-middle">
                                <img class="rounded-circle" src="@item.CarPictureURL" alt="@item.Brand" style="max-width: 150px" />

                            </td>
                            <td class="align-middle">
                                @Html.DisplayFor(modelItem => item.Brand)
                            </td>
                            <td class="align-middle">
                                @Html.DisplayFor(modelItem => item.Description)
                            </td>
                            <td class="align-middle">
                                <a class="btn btn-outline-primary"><i class="badge-info bi-pencil-square"></i>Edit </a>
                                <a class="btn btn-outline-info"><i class="bi bi-eye"></i>Details</a>
                                <a class="btn btn-danger text-white"><i class="bi bi-trash"></i>Delete</a>
                        </tr>

                          }
                </tbody>

            </table>

        </div>
    </div>
